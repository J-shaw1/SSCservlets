<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>TestLogin</servlet-name>
        <servlet-class>controllers.TestLogin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NewEmail</servlet-name>
        <servlet-class>controllers.NewEmail</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NewContact</servlet-name>
        <servlet-class>controllers.NewContact</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchContact</servlet-name>
        <servlet-class>controllers.SearchContact</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DestroySession</servlet-name>
        <servlet-class>controllers.DestroySession</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TestLogin</servlet-name>
        <url-pattern>/TestLogin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NewEmail</servlet-name>
        <url-pattern>/NewEmail</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NewContact</servlet-name>
        <url-pattern>/NewContact</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchContact</servlet-name>
        <url-pattern>/SearchContact</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DestroySession</servlet-name>
        <url-pattern>/DestroySession</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
